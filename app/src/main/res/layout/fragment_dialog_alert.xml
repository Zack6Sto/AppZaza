<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".util.dialog.FragmentDialogAlert">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/bg_radius"
        android:backgroundTint="@color/app_blue1"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnClose"
            android:background="@drawable/ic_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/line_gray"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtTerms"
            android:text="Terms and conditions"
            android:gravity="center"
            android:textColor="@color/line_gray"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/lineViewTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTerms" />

        <TextView
            android:id="@+id/tvTerms"
            android:textColor="@color/line_gray"
            android:textSize="16dp"
            android:text="Testtttttttttttttttttttttttt"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineViewTop"/>


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_gray"
            android:text="I have read and accept."
            android:textSize="16dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lineViewBottom"/>

        <View
            android:id="@+id/lineViewBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnAccept" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:text="Accept the terms"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="@color/app_purple2"
            android:textAllCaps="false"
            android:enabled="false"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>